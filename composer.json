{
    "name": "timcooper/colourspectrum",
    "description": "Bolt CMS extension to add an advanced colourpicker field type using Spectrum (https://bgrins.github.io/spectrum/)",
    "type": "bolt-extension",
    "keywords": [
        "colourpicker",
        "spectrum",
        "eyedropper",
        "field",
        "backend"
    ],
    "require": {
        "bolt/bolt": "^3.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Cooper",
            "email": "tjkoopa@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "init.php"
        ],
        "psr-4": {
            "Bolt\\Extension\\TimCooper\\ColourSpectrum\\": ""
        }
    },

    "extra": {
        "bolt-assets": "assets",
        "bolt-screenshots": [
            "screenshot1.png",
            "screenshot2.png",
            "screenshot3.png",
            "screenshot4.png"
        ]
    }
}
